<form method="post" action="{{ path('app_comment_delete', {'cid': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn button3"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
</form>
