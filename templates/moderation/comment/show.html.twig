{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ comment.note }}</td>
            </tr>
            <tr>
                <th>En panne ?</th>
                <td>{{ comment.enPanne }}</td>
            </tr>
            <tr>
                <th>N'existe plus</th>
                <td>{{ comment.nExistePlus }}</td>
            </tr>
            <tr>
                <th>Accès handicapé ?</th>
                <td>{{ comment.accesHandicape }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ comment.commentaire }}</td>
            </tr>
            <tr>
                <th>Date du commentaire</th>
                <td>{{ comment.dateCommentaire|date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>Id_toilette</th>
                <td>{{ comment.idToilette }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_moderation_comment_index') }}">Retour à la liste</a>

    <a href="{{ path('app_moderation_comment_edit', {'id': comment.id}) }}">Modifier</a>

    {{ include('moderation/comment/_delete_form.html.twig') }}
{% endblock %}
