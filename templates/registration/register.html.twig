{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="form">
		<div class="filtrer-recherche">
			<a href="{{path('app_accueil')}}">
				<iconify-icon id="arrow" icon="fe:arrow-left"></iconify-icon>
			</a>
		</div>
		{{ form_errors(registrationForm) }}
		{{ form_start(registrationForm) }}
		<div class="form-inscription">
			<h1>Inscription</h1>
			{{ form_row(registrationForm.nom,{
            label: 'nom'
        }) }}
			{{ form_row(registrationForm.email,{
            label: 'e-mail'
        }) }}
			<div class="con-form">
				<i class="fa fa-eye" id="eye1" aria-hidden="true" onclick="togglePassword1()"></i>
				{{ form_label(registrationForm.plainPassword.first) }}
				{{ form_widget(registrationForm.plainPassword.first,{
            id: 'inputPassword1'
        }) }}
			</div>
			<div class="con-form">
				<i class="fa fa-eye" id="eye2" aria-hidden="true" onclick="togglePassword2()"></i>
				{{ form_label(registrationForm.plainPassword.second) }}
				{{ form_widget(registrationForm.plainPassword.second,{
            id: 'inputPassword2'
        }) }}
			</div>

		</div>
		<button class="button1" type="submit" class="btn">cr√©er</button>
		{{ form_end(registrationForm) }}

	</div>
</div>{% endblock %}
